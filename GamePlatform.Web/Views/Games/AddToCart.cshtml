@model GamePlatform.Domain.Domain.GameInCart

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <form method="post" asp-action="AddToCartConfirmed" class="form-control">
            <input type="hidden" asp-for="GameId" />

            <div class="form-group">
                <label>Quantity</label>
                <input type="number" asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Add to Cart" />
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-4">
        <a asp-action="Index" asp-controller="Games" class="btn btn-primary">Back</a>
    </div>
</div>